<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vicki.bored.bored.joke.JokeDisplayActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="290dp"
        android:contentDescription="@string/chandlerr"
        android:layout_height="313dp"
        app:srcCompat="@drawable/chandler"
        android:layout_above="@+id/jokeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-51dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/jokeButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/jokedescription"
        android:layout_marginStart="124dp"
        android:background="@drawable/jokee"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/joke"
        android:layout_width="240dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/joke"
        android:layout_alignEnd="@+id/jokeButton"
        android:layout_alignRight="@+id/jokeButton"
        android:layout_marginEnd="14dp"
        android:text="@string/press_here"
        android:layout_marginStart="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/jokeButton"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/jokeButton"
        app:layout_constraintHorizontal_bias="0.176"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/jokeButton" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/jokeButton"
        android:layout_marginEnd="37dp"
        android:visibility="invisible"
        android:progressDrawable="@color/colorPrimary"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginRight="-23dp"
        app:layout_constraintRight_toRightOf="@+id/textView2"
        android:layout_marginStart="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>
